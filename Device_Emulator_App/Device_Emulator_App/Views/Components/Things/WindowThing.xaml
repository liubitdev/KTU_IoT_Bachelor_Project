<?xml version="1.0" encoding="UTF-8"?>
<d:BasePage xmlns:d="clr-namespace:Device_Emulator_App.Views"
            xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Device_Emulator_App.Views.Components.Things.WindowThing"
            Shell.TabBarIsVisible = "False">

    <StackLayout BackgroundColor="{Binding WindowColor}" VerticalOptions="FillAndExpand" HeightRequest="560">
        <Label Text="{Binding LabelText}" TextColor="{Binding LabelColor}" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
        <StackLayout>
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <Button Text="Open" Clicked="WindowOpenHandler"/>
                <Button Text="Close" Clicked="WindowCloseHandler"/>
            </StackLayout>
            <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <Button Text="Break" Clicked="WindowBreakHandler"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>

</d:BasePage>