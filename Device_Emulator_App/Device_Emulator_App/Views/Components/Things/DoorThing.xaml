<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Device_Emulator_App.Views.Components.Things.DoorThing">
    <ContentView.Content>
        <StackLayout BackgroundColor="{Binding DoorColor}" VerticalOptions="FillAndExpand" HeightRequest="560">
            <Label Text="{Binding LabelText}" TextColor="{Binding LabelColor}" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>