<?xml version="1.0" encoding="UTF-8"?>
<d:BasePage xmlns:d="clr-namespace:Device_Emulator_App.Views"
            xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Device_Emulator_App.Views.Components.Controllers.SunDetectorController"
            Shell.TabBarIsVisible = "False">

    <StackLayout VerticalOptions="Fill" HorizontalOptions="Fill">
        <Label Text="Control the light!" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        <Label Text="{Binding SliderValue}" HorizontalTextAlignment="Center" />
        <Slider AutomationId="SliderControl" x:Name="SliderInput" Minimum="0" Maximum="1" ValueChanged="SliderValueChanged"/>
        <BoxView BackgroundColor="{Binding BackgroundColor}" VerticalOptions="FillAndExpand"/>
    </StackLayout>

</d:BasePage>