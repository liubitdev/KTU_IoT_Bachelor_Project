<?xml version="1.0" encoding="UTF-8"?>
<d:BasePage xmlns:d="clr-namespace:Device_Emulator_App.Views"
            xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Device_Emulator_App.Views.Components.Controllers.SwitchController"
            Shell.TabBarIsVisible = "False">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="25">
        <Switch AutomationId="SwitchController" IsToggled="{Binding IsEnabled}" HorizontalOptions="Center" />
        <Label Text="Switch your things!" HorizontalOptions="Center" />
    </StackLayout>

</d:BasePage>