<?xml version="1.0" encoding="UTF-8"?>
<d:BasePage xmlns:d="clr-namespace:Device_Emulator_App.Views"
            xmlns="http://xamarin.com/schemas/2014/forms" 
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="Device_Emulator_App.Views.Components.Controllers.MailboxController"
            Shell.TabBarIsVisible = "False" >

    <StackLayout BackgroundColor="{Binding ViewColor}" VerticalOptions="FillAndExpand" HeightRequest="560">
        <Label Text="{Binding LabelText}" TextColor="{Binding LabelColor}" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
            <Button Text="Fill with Parcel" Clicked="PutInParcel"/>
        </StackLayout>
    </StackLayout>
    
</d:BasePage>